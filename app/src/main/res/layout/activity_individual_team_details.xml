<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/backgroundImageLayout"
    android:background="@drawable/blue_background"
    tools:context=".activities.team.IndividualTeamDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/eventsToolBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:theme="@style/CardView.Light"
            app:titleMarginStart="40dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/back_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:background="@drawable/white_bg_textview"
                        android:src="@drawable/ic_baseline_keyboard_backspace_24" />

                </LinearLayout>
            </FrameLayout>

        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/imageCard"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            app:cardCornerRadius="60dp"
            app:cardElevation="10dp">

            <LinearLayout
                android:id="@+id/imageTeamPhoto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/koushik_modekurti"
                android:orientation="vertical" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/txtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Koushik Modekurti"
            android:fontFamily="@font/googlesans_bold"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_margin="10dp"
            android:layout_gravity="center_horizontal"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/txtRoleName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Android Developer"
            android:fontFamily="@font/googlesans_bold"
            android:textSize="15dp"
            android:layout_margin="8dp"
            android:layout_gravity="center_horizontal"
            android:textColor="#fff" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp"
        android:padding="10dp"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Academic Details"
            android:textColor="@color/colorYellow"
            android:textSize="18dp"
            android:layout_gravity="start"
            android:layout_marginBottom="5dp"
            android:textStyle="bold"/>


        <TextView
            android:id="@+id/txtYearDept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4th Year, Information Technology"
            android:textSize="16dp"
            android:layout_margin="4dp"
            android:layout_gravity="start" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GMR Institute of Technology"
            android:layout_margin="2dp"
            android:textSize="16dp"
            android:layout_gravity="left" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorBlue"
            android:layout_marginTop="10dp" />

        <!-- Interests-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Interests"
            android:layout_marginTop="20dp"
            android:textColor="@color/colorRed"
            android:textSize="18dp"
            android:layout_gravity="start"
            android:layout_marginBottom="5dp"
            android:textStyle="bold"/>


        <TextView
            android:id="@+id/txtInterests"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Machine Learing, Android, Firebase, php, CSS, REST API, Web Development, HTML5"
            android:textSize="16dp"
            android:layout_margin="4dp"
            android:layout_gravity="start" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorBlue"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact"
            android:layout_gravity="start"
            android:layout_marginTop="20dp"
            android:textColor="@color/colorGreen"
            android:textSize="18dp"
            android:layout_marginBottom="5dp"
            android:textStyle="bold"/>



        <TextView
            android:id="@+id/txtEmailID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="kouhsikmodekurti00@gmail.com"
            android:layout_margin="2dp"
            android:textSize="16dp"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/ic_baseline_mail_outline_24"
            android:layout_gravity="left" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorBlue"
            android:layout_marginTop="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imageGithub"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:src="@drawable/ic_github_logo" />

            <ImageView
                android:id="@+id/imageInstagram"
                android:layout_width="40dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_instagram_logo" />


            <ImageView
                android:id="@+id/imageLinkedin"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:tint="#000"
                android:layout_margin="10dp"
                android:src="@drawable/ic_linkedin" />


        </LinearLayout>

    </LinearLayout>


</LinearLayout>

</androidx.core.widget.NestedScrollView>