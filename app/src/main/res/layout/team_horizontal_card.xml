<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:id="@+id/relativeLayout"
    android:background="?attr/selectableItemBackground"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:cardElevation="10dp"
        android:id="@+id/imageCard"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp"
        app:cardCornerRadius="60dp">
        <LinearLayout
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/saikiran" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mr. Saikiran Kopparthi"
        android:layout_toRightOf="@id/imageCard"
        android:layout_marginTop="15dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:fontFamily="@font/googlesans_bold"
        android:textColor="#000"
        android:id="@+id/txtName"
        android:gravity="center_horizontal"
        android:textSize="18dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtName"
        android:layout_toRightOf="@id/imageCard"
        android:text="Android Developer"
        android:id="@+id/txtRoleName"
        android:layout_margin="15dp"
        android:background="@drawable/blue_bg_textview"
        android:textColor="#fff"
        android:padding="5dp"
        android:gravity="center_horizontal" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:id="@+id/txtViewMore"
        android:drawableEnd="@drawable/ic_baseline_arrow_forward_ios_16"
        android:text="View Profile "
        android:textSize="12dp"
        android:layout_below="@id/txtRoleName" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:layout_margin="8dp"
        android:background="@color/colorBlue"
        android:layout_below="@id/imageCard" />









</RelativeLayout>