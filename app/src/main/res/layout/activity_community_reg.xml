                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="DSC - GMRIT Community Registration"
                android:textColor="#000"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:textStyle="bold"
                android:textColor="@color/colorYellow"
                android:text="Hit Join us Now to get on-boarded !!!"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:textColor="@color/colorBlue"
                android:text="Join us to get Event Details First !!!"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Step 1: Click on Join Us in GMRIT's DSC Page."
                android:textSize="14sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Step 2: Sign in with your account (Gmail only)."
                android:textSize="14sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Step 3: Fill the Details and hit Sign Up."
                android:textSize="14sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:textColor="#000"
                android:text="Congratulations, you're now part of DSC - GMRIT."
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/textJoin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Join us Now "
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/red_bg_textview"
                android:fontFamily="@font/googlesans_regular"
                android:textColor="#fff"
                android:padding="8dp"
                android:textSize="16sp"
                android:layout_marginTop="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:textColor="#000"
                android:text="Â© Copyright DSC - GMRIT, 2020"/>

