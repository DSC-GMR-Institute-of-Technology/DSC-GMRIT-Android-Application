<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.general.CommunityRegistrationActivity"
    android:background="#ffffff"
    android:padding="15dp">


 <androidx.core.widget.NestedScrollView
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:layout_alignParentEnd="true"
     android:layout_alignParentStart="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:layout_marginTop="50dp"
            android:padding="10dp"
            android:src="@drawable/teamwork"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/selectedText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WE = TEAM"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/green_bg_textview"
            android:fontFamily="@font/googlesans_regular"
            android:textColor="#fff"
            android:padding="8dp"
            android:textSize="12dp"
            android:layout_margin="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:orientation="vertical"
            android:gravity="center">

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name of Student"
                app:boxStrokeColor="@color/colorBlue"
                app:boxStrokeWidthFocused="2dp"
                app:endIconMode="clear_text"
                app:endIconTint="#000"
                android:layout_margin="8dp"
                app:hintTextColor="@color/colorBlue"
                app:startIconDrawable="@drawable/ic_baseline_person_outline_24"
                app:startIconTint="#000">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/googlesans_regular"
                    android:id="@+id/editName"
                    android:inputType="text"
                    android:textColor="#000" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email ID"
                app:boxStrokeColor="@color/colorBlue"
                app:boxStrokeWidthFocused="2dp"
                app:endIconMode="clear_text"
                app:endIconTint="#000"
                android:layout_margin="8dp"
                app:hintTextColor="@color/colorBlue"
                app:startIconDrawable="@drawable/ic_email_black_24dp"
                app:startIconTint="#000">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/googlesans_regular"
                    android:inputType="text"
                    android:id="@+id/editMail"
                    android:textColor="#000" />

            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone Number"
                app:boxStrokeColor="@color/colorBlue"
                app:boxStrokeWidthFocused="2dp"
                app:endIconMode="clear_text"
                app:endIconTint="#000"
                android:layout_margin="8dp"
                app:hintTextColor="@color/colorBlue"
                app:startIconDrawable="@drawable/ic_phone_black_24dp"
                app:startIconTint="#000">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/googlesans_regular"
                    android:inputType="number"
                    android:maxLength="10"
                    android:id="@+id/editPhone"
                    android:textColor="#000" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="JNTU Number"
                app:boxStrokeColor="@color/colorBlue"
                app:boxStrokeWidthFocused="2dp"
                android:layout_margin="8dp"
                app:endIconTint="#000"
                app:startIconDrawable="@drawable/ic_baseline_assignment_24"
                app:hintTextColor="@color/colorBlue"
                app:startIconTint="#000">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/googlesans_regular"
                    android:id="@+id/jntu"
                    android:textColor="#000" />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Branch/Stream"
                app:boxStrokeColor="@color/colorBlue"
                app:boxStrokeWidthFocused="2dp"
                android:layout_margin="8dp"
                app:endIconTint="#000"
                app:startIconDrawable="@drawable/ic_baseline_business_24"
                app:hintTextColor="@color/colorBlue"
                app:startIconTint="#000">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/googlesans_regular"
                    android:id="@+id/editConfPassword"
                    android:inputType="textPassword"
                    android:textColor="#000"
                    android:lineSpacingExtra="8dp"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Reason to Join The Club "
                app:boxStrokeColor="@color/colorBlue"
                app:boxStrokeWidthFocused="2dp"
                android:layout_margin="8dp"
                app:endIconTint="#000"
                app:startIconDrawable="@drawable/ic_baseline_message_24"
                app:hintTextColor="@color/colorBlue"
                app:startIconTint="#000">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/googlesans_regular"
                    android:id="@+id/unique"
                    android:textColor="#000" />

            </com.google.android.material.textfield.TextInputLayout>




            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/red_bg_textview"
                android:text="Register in Community"
                android:textAllCaps="false"
                android:padding="8dp"
                android:textColor="#fff" />


        </LinearLayout>
    </LinearLayout>

 </androidx.core.widget.NestedScrollView>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/restaurantToolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="#fff"
        android:theme="@style/CardView.Light"
        app:titleMarginStart="40dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/back_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    app:tint="#000"
                    android:layout_gravity="start"
                    android:src="@drawable/ic_baseline_keyboard_backspace_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Club Membership Registration"
                    android:fontFamily="@font/googlesans_bold"
                    android:textSize="16dp"
                    android:textColor="#000"
                    android:layout_margin="10dp" />

            </LinearLayout>
        </FrameLayout>

    </androidx.appcompat.widget.Toolbar>



</RelativeLayout>