<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.events.EventDetailsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBlue"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorBlue">

            <LinearLayout
                android:id="@+id/imageLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/eventImage"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/dsc_info_1" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_margin="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/back_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/red_bg_textview"
                    android:padding="5dp"
                    android:src="@drawable/ic_baseline_keyboard_backspace_24"
                    app:tint="#fff" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/eventIntroSession"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageLayout"
                android:background="@color/colorBlue"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/txteventTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:fontFamily="@font/googlesans_bold"
                    android:text="DSC Introduction Session"
                    android:textColor="#fff"
                    android:textSize="22sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_baseline_calendar_today_24"
                    android:drawablePadding="8dp"
                    android:drawableTint="#fff"
                    android:fontFamily="@font/googlesans_regular"
                    android:padding="8dp"
                    android:text="Wednesday, September 09 2020"
                    android:textColor="#fff"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_baseline_access_time_24"
                    android:drawablePadding="8dp"
                    android:drawableTint="#fff"
                    android:fontFamily="@font/googlesans_regular"
                    android:padding="8dp"
                    android:text="6.30 PM - 7.30 PM  IST"
                    android:textColor="#fff"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_baseline_desktop_windows_24"
                    android:drawablePadding="8dp"
                    android:drawableTint="#fff"
                    android:fontFamily="@font/googlesans_regular"
                    android:padding="8dp"
                    android:text="Online Mode"
                    android:textColor="#fff"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_rupee_indian"
                    android:drawablePadding="8dp"
                    android:drawableTint="#fff"
                    android:fontFamily="@font/googlesans_regular"
                    android:padding="8dp"
                    android:text="Free"
                    android:textColor="#fff"
                    android:textSize="16sp" />

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/eventIntroSession"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="-25dp"
                app:cardCornerRadius="35dp"
                app:cardElevation="8dp">

                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="15dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:fontFamily="@font/googlesans_bold"
                            android:text="Description"
                            android:textColor="@color/colorYellow"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:fontFamily="@font/googlesans_regular"
                            android:justificationMode="inter_word"
                            android:padding="3dp"
                            android:text="Hello Folks, We are going to Discuss about What is Developer Student Clubs about and We are going to dicuss about the Future Events going to Conduct. We are going to come up with a Demo of our Core Team and their Roles. We are going to Discuss about the Steps taken to Join our Community. " />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="15dp"
                            android:fontFamily="@font/googlesans_bold"
                            android:text="Speaker"
                            android:textColor="@color/colorYellow"
                            android:textSize="20sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:fontFamily="@font/googlesans_regular"
                            android:justificationMode="inter_word"
                            android:padding="3dp"
                            android:text="Koushik Modekurti, DSC Lead, GMRIT" />

                        <Button
                            android:id="@+id/btnEventRegister"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="20dp"
                            android:background="@drawable/green_bg_textview"
                            android:fontFamily="@font/googlesans_regular"
                            android:padding="15dp"
                            android:text="Click Here to Register"
                            android:textAllCaps="false"
                            android:textColor="#fff" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="20dp"
                            android:text="@string/copyright_dsc_gmrit_2020"
                            android:textColor="#000"
                            android:textStyle="bold" />

                    </LinearLayout>

                </androidx.core.widget.NestedScrollView>


            </androidx.cardview.widget.CardView>

        </RelativeLayout>


    </RelativeLayout>

</androidx.core.widget.NestedScrollView>