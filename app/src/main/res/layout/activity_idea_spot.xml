<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.general.IdeaSpotActivity"
    android:orientation="vertical"
    android:padding="15dp"
    android:background="#ffffff"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/restaurantToolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:theme="@style/CardView.Light"
        app:titleMarginStart="40dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/back_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    app:tint="#000"
                    android:src="@drawable/ic_baseline_keyboard_backspace_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Idea Spot"
                    android:fontFamily="@font/googlesans_bold"
                    android:textSize="20dp"
                    android:textColor="#000"
                    android:layout_margin="10dp" />

            </LinearLayout>
        </FrameLayout>

    </androidx.appcompat.widget.Toolbar>





    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/googlesans_bold"
            android:text="Submit your Idea"
            android:textColor="#000"
            android:textSize="30dp"
            android:layout_gravity="center"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="vertical"
            android:gravity="center">

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="enter your name"
                app:boxStrokeColor="@color/colorBlue"
                app:boxStrokeWidthFocused="2dp"
                app:endIconMode="clear_text"
                app:endIconTint="#000"
                app:hintTextColor="@color/colorBlue"
                app:startIconDrawable="@drawable/ic_edit_black_24dp"
                app:startIconTint="#000">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/googlesans_regular"
                    android:id="@+id/editName"
                    android:inputType="text"
                    android:textColor="#000" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter MailId"
                app:boxStrokeColor="@color/colorBlue"
                app:boxStrokeWidthFocused="2dp"
                app:endIconMode="clear_text"
                app:endIconTint="#000"
                app:hintTextColor="@color/colorBlue"
                app:startIconDrawable="@drawable/ic_email_black_24dp"
                app:startIconTint="#000">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/googlesans_regular"
                    android:inputType="text"
                    android:id="@+id/editMail"
                    android:textColor="#000" />

            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Phone Number"
                app:boxStrokeColor="@color/colorBlue"
                app:boxStrokeWidthFocused="2dp"
                app:endIconMode="clear_text"
                app:endIconTint="#000"
                app:hintTextColor="@color/colorBlue"
                app:startIconDrawable="@drawable/ic_phone_black_24dp"
                app:startIconTint="#000">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/googlesans_regular"
                    android:inputType="number"
                    android:maxLength="10"
                    android:id="@+id/editPhone"
                    android:textColor="#000" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="JNTU Number"
                app:boxStrokeColor="@color/colorBlue"
                app:boxStrokeWidthFocused="2dp"

                app:endIconTint="#000"
                app:hintTextColor="@color/colorBlue"
                app:startIconTint="#000">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/googlesans_regular"
                    android:id="@+id/jntu"
                    android:textColor="#000" />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Explain Your Idea In One Sentence"
                app:boxStrokeColor="@color/colorBlue"
                app:boxStrokeWidthFocused="2dp"

                app:endIconTint="#000"
                app:hintTextColor="@color/colorBlue"
                app:startIconTint="#000">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/googlesans_regular"
                    android:id="@+id/Onesentence"
                    android:textColor="#000" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Summarize your idea"
                app:boxStrokeColor="@color/colorBlue"
                app:boxStrokeWidthFocused="2dp"

                app:endIconTint="#000"
                app:hintTextColor="@color/colorBlue"
                app:startIconTint="#000">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/googlesans_regular"
                    android:id="@+id/editConfPassword"
                    android:inputType="textPassword"
                    android:textColor="#000"
                    android:lineSpacingExtra="8dp"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="What makes your idea unique?"
                app:boxStrokeColor="@color/colorBlue"
                app:boxStrokeWidthFocused="2dp"

                app:endIconTint="#000"
                app:hintTextColor="@color/colorBlue"
                app:startIconTint="#000">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/googlesans_regular"
                    android:id="@+id/unique"
                    android:textColor="#000" />

            </com.google.android.material.textfield.TextInputLayout>




            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@color/colorYellow"
                android:text="Submit"
                android:textColor="#fff" />


        </LinearLayout>
    </LinearLayout>
</ScrollView>