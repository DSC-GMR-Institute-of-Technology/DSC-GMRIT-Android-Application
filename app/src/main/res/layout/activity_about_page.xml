<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.general.AboutPage"
    android:background="#ffffff"
    android:orientation="vertical"
    android:padding="15dp">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/ToolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:theme="@style/CardView.Light"
        app:titleMarginStart="40dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <ImageView
                    android:id="@+id/back_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    app:tint="#000"
                    android:src="@drawable/ic_baseline_keyboard_backspace_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="About us"
                    android:fontFamily="@font/googlesans_bold"
                    android:textSize="20dp"
                    android:textColor="#000"
                    android:layout_margin="10dp" />

            </LinearLayout>
        </FrameLayout>


    </androidx.appcompat.widget.Toolbar>

    <ImageView
        android:id="@+id/imgDSCGMRITLogo"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/dsclogo"
        android:justificationMode="inter_word"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:textSize="14dp"
        android:fontFamily="@font/googlesans_regular"
        android:textColor="#000"
        android:text="Google DSC is a Developer Student Club which is a technical community that combines all the university students, and all the other students who learn, share ideas and come up with viable projects that are likely to solve day to day universe problems."
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:textSize="14dp"
        android:fontFamily="@font/googlesans_regular"
        android:textColor="#000"
        android:text="@string/the_clubs_are_intended_as_a_space_for_students_to_try_out_new_ideas_and_collaborate_to_solve_mobile_and_web_development_problems"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:textSize="14dp"
        android:fontFamily="@font/googlesans_regular"
        android:textColor="#000"
        android:text="DSC, GMR Institute of Technology is a realm for students who are interested in Google Developer Technologies. We provide an opportunity to showcase your skills, grow knowledge in a better learning environment. With a Perfect Blend of Professionalism, we act as a catalyst to bring the required change in the Society."
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:id="@+id/LinkedIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="17dp"
            android:src="@drawable/linkedin"
            />

        <ImageView
            android:id="@+id/Instagram"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="17dp"
            android:src="@drawable/instagram" />


    </LinearLayout>




</LinearLayout>