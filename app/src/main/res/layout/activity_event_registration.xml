<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    android:background="#fff"
    tools:context=".activities.events.EventRegistrationActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:padding="35dp"
                android:scaleType="fitXY"
                android:layout_marginTop="30dp"
                android:src="@drawable/event" />

            <TextView
                android:id="@+id/selectedText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selected Event: DSC Info Session"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/blue_bg_textview"
                android:fontFamily="@font/googlesans_regular"
                android:textColor="#fff"
                android:padding="8dp"
                android:layout_margin="10dp" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Name of Student"
                app:boxStrokeColor="#000"
                android:layout_margin="8dp"
                app:boxStrokeWidthFocused="2dp"
                android:layout_gravity="center_horizontal"
                app:endIconMode="clear_text"
                app:endIconTint="#000"
                app:hintTextColor="#000"
                app:startIconTint="#000">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/googlesans_regular"
                    android:inputType="text"
                    android:textColor="#000" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email ID"
                app:boxStrokeColor="#000"
                android:layout_margin="8dp"
                app:boxStrokeWidthFocused="2dp"
                app:endIconMode="clear_text"
                android:layout_gravity="center_horizontal"
                app:endIconTint="#000"
                app:hintTextColor="#000"
                app:startIconTint="#000">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/googlesans_regular"
                    android:inputType="textEmailAddress"
                    android:textColor="#000" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone Number"
                app:boxStrokeColor="#000"
                android:layout_gravity="center_horizontal"
                android:layout_margin="8dp"
                app:boxStrokeWidthFocused="2dp"
                app:endIconMode="clear_text"
                app:endIconTint="#000"
                app:hintTextColor="#000"
                app:startIconTint="#000">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/googlesans_regular"
                    android:inputType="number"
                    android:maxLength="10"
                    android:textColor="#000" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="College Name"
                app:boxStrokeColor="#000"
                android:layout_margin="8dp"
                android:layout_gravity="center_horizontal"
                app:boxStrokeWidthFocused="2dp"
                app:endIconMode="clear_text"
                app:endIconTint="#000"
                app:hintTextColor="#000"
                app:startIconTint="#000">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/googlesans_regular"
                    android:inputType="text"
                    android:textColor="#000" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Roll Number"
                app:boxStrokeColor="#000"
                android:layout_margin="8dp"
                android:layout_gravity="center_horizontal"
                app:boxStrokeWidthFocused="2dp"
                app:endIconMode="clear_text"
                app:endIconTint="#000"
                app:hintTextColor="#000"
                app:startIconTint="#000">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/googlesans_regular"
                    android:inputType="text"
                    android:textColor="#000" />

            </com.google.android.material.textfield.TextInputLayout>


            <Spinner
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:focusable="true"
                android:background="@drawable/spinner_bg"
                android:entries="@array/statesList"
                android:layout_margin="8dp" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:focusable="true"
                android:background="@drawable/spinner_bg"
                android:entries="@array/districtList"
                android:layout_margin="8dp" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:focusable="true"
                android:background="@drawable/spinner_bg"
                android:entries="@array/citiesList"
                android:layout_margin="8dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:background="@drawable/red_bg_textview"
                android:text="Register for Event"
                android:fontFamily="@font/googlesans_regular"
                android:textAllCaps="false"
                android:layout_gravity="center_horizontal"
                android:textSize="16dp"
                android:padding="8dp"
                android:layout_margin="10dp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/restaurantToolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:theme="@style/CardView.Light"
        app:titleMarginStart="40dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:background="#fff"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/back_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    app:tint="#000"
                    android:src="@drawable/ic_baseline_keyboard_backspace_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Event Registration Form"
                    android:fontFamily="@font/googlesans_bold"
                    android:textSize="20dp"
                    android:textColor="#000"
                    android:layout_margin="10dp" />

            </LinearLayout>
        </FrameLayout>

    </androidx.appcompat.widget.Toolbar>





</RelativeLayout>